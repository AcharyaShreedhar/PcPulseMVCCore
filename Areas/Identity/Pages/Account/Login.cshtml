@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="content-wrap w-50 mx-auto">
    <div class="mb-4">
        <h3 class="secondary-heading text-center">Login</h3>
    </div>
    <hr class="mb-5"/>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger mt-2"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="Input.Password" class="text-danger mt-2"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Input.RememberMe" class="col-sm-3 col-form-label">  </label>
            <div class="col-sm-9">
                <input class="form-check-input" style="margin-top:10px" asp-for="Input.RememberMe" />

            </div>
        </div>

        <div class="mb-3 row">
            <span class="col-sm-3"></span>
            <div class="col-sm-9">
                <button id="login-submit" type="submit" class="btn card-button">Log In</button>
            </div>
        </div>
    </form>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">  </label>
        <div class="col-sm-9">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't Have a Account? Register as a new user.</a>

        </div>
    </div>
</div>
<br />
<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
