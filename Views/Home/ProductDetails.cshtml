Description:
- This page displays detailed information about a specific product in the PcPulse Online Store.
- The product image, name, category, price, and description are shown.
- Users can add the product to their cart or view their cart by clicking on the respective buttons.
-->
@model PcPulse.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<div class="content-wrap">
    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <img src="~/ProductImage/@Model.ProductPicture" class="mx-auto" alt="">
                <p class="mt-3 detail-price-p">Category: <span>@Model.Category.LongName</span> </p>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <h2>@Model.ProductName</h2>
                <hr>
                <p class="detail-price-p">Price : <span>$@Model.ProductPrice</span></p>
                <p>@Model.ProductDescription</p>
                <div class="d-flex" style="gap: 10px;">

                    <a class="btn btn-sm card-button" asp-action="AddToCart" asp-route-id="@Model.Id">Add to Cart</a>
                    <a class="btn btn-sm bg-success text-light" asp-action="Cart" asp-controller="Home">View Cart</a>

                </div>
            </div>
        </div>
    </div>
</div>
