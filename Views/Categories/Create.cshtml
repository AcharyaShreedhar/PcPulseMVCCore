Description:
- This page is used to create a new category for products in the Electronics Store application.
- It allows users to input the short name and long name of the category.
- Upon submission, the form data is sent to the server for processing and creating the category in the database.
-->
@model PcPulse.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrap">
    <div class="row p-0">
        <div class="card p-0">
            <div class="card-header">
                <h3 class="secondary-heading mb-3 p-0 text-center">Add Category</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="ShortName" class="control-label mb-2"> Short Name :</label>
                        <input asp-for="ShortName" class="form-control" placeholder="Short Name" />
                        <span asp-validation-for="ShortName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="LongName" class="control-label mb-2">Long Name :</label>
                        <input asp-for="LongName" class="form-control" placeholder="Long Name" />
                        <span asp-validation-for="LongName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


